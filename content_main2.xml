<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thesohyproject.codeyouravatar.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <RadioGroup
        android:id="@+id/radioGroup_main2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_submit_main3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/radioButton_wrong1_main3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="pants; putTheirDressOn(); putTheirPantsOn()"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="239dp" />

        <RadioButton
            android:id="@+id/radioButton_dress_main3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="pants; putTheirPantsOn(); putTheirDressOn()"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="239dp" />

        <RadioButton
            android:id="@+id/radioButton_wrong2_main3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="a dress; putTheirDressOn(); putTheirPantsOn()"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="375dp" />

        <RadioButton
            android:id="@+id/radioButton_pants_main3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="a dress; putTheirDressOn(); putTheirDressOn()"
            android:textColor="@color/colorAccent"
            android:textColorLink="@color/colorAccent"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="375dp" />

    </RadioGroup>


    <TextView
        android:id="@+id/textView_explanation_main3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:fontFamily="monospace"
        android:text="What do you want \nyour avatar to wear?"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/usersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="name"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup_main2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/textView_explanation2_main3"
        android:layout_width="205dp"
        android:layout_height="134dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="101dp"
        android:fontFamily="monospace"
        android:text="Learning concept: \nIf-Else Statements are conditional statements in coding languages. They tell the computer what to do when someone choses a certain condition."
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_submit_main3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="toNextPage"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="If I want the avatar in ___, \nuse the function___; \nElse, Iâ€™ll use the function  ___."
        android:textAlignment="center"
        android:textSize="13dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/radioGroup_main2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_explanation2_main3"
        app:layout_constraintVertical_bias="1.0" />




    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="126dp"
        android:layout_height="125dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_explanation_main3">

        <ImageView
            android:id="@+id/imageView_default_main3"
            android:layout_width="82dp"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/stick_figure"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/imageView_tshirt_main3"
            android:layout_width="82dp"
            android:layout_height="96dp"
            android:src="@drawable/pants"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignTop="@+id/imageView_default_main3"
            android:layout_alignLeft="@+id/imageView_default_main3"
            android:layout_alignStart="@+id/imageView_default_main3" />

        <ImageView
            android:id="@+id/imageView_dress_main3"
            android:layout_width="40dp"
            android:layout_height="96dp"
            android:src="@drawable/dress"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView_default_main3"
            android:layout_alignStart="@+id/imageView_default_main3"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>